{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "esModuleInterop": true,
    "module": "node18",
    "moduleResolution": "nodenext",
    "composite": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["src/**/*"],
  "exclude": ["**/__mocks__/*", "node_modules/", "dist/"]
}
